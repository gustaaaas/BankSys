<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefWidth="1280.0" prefHeight="720.0"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.banksys.TopMenu"
           stylesheets="@style.css">

    <VBox alignment="CENTER" spacing="30.0"
          StackPane.alignment="CENTER"
          styleClass="welcome-container">

        <padding>
            <Insets top="50" bottom="50" left="50" right="50" />
        </padding>

        <Label text=" Paskolos Skaičiuoklė" styleClass="welcome-title">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <Label text="Interaktyvi ir paprasta naudoti paskolos skaičiuoklė."
               styleClass="welcome-subtitle">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <Label text="• Skaičiuokite anuiteto arba linijinės paskolos įmokas. Peržiūrėkite grafiką ir eksportuokite PDF. Raskite likusią paskolos sumą bet kuriuo metu."
               styleClass="feature-list">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <Button text="↪ Paleisti skaičiuoklę"
                onAction="#onPaskolosSumButtonClick"
                styleClass="feature-button"
                prefWidth="320.0"
                prefHeight="60.0">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </VBox>
</StackPane>